# WiFi QR Code Generator - Environment Variables
# Copy this file to .env and update with your actual values

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_USER=wifiqr
DB_PASSWORD=your_secure_password_here
DB_NAME=wifiqr_db
DB_SSL_MODE=disable

# Database Connection Pooling
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=5m

# ============================================================================
# SECURITY
# ============================================================================

# JWT Secret Key (minimum 32 characters)
# Generate with: openssl rand -hex 32
JWT_SECRET=your_jwt_secret_key_minimum_32_characters_required

# Encryption Key (exactly 32 characters for AES-256)
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY=your_encryption_key_exactly_32_chars

# Token Expiration (in hours)
JWT_EXPIRATION_HOURS=1

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================
PORT=8080
GIN_MODE=debug
LOG_LEVEL=debug

# ============================================================================
# CORS CONFIGURATION
# ============================================================================
FRONTEND_URL=http://localhost:4200
ALLOWED_ORIGINS=http://localhost:4200,http://localhost:4201

# ============================================================================
# RATE LIMITING (Optional)
# ============================================================================
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# ============================================================================
# PRODUCTION SETTINGS
# ============================================================================
# For production, change the following:
# - GIN_MODE=release
# - LOG_LEVEL=info
# - DB_SSL_MODE=require
# - RATE_LIMIT_ENABLED=true
# - Generate new JWT_SECRET and ENCRYPTION_KEY
# - Use strong DB_PASSWORD
# - Set FRONTEND_URL to your actual domain
# - Configure ALLOWED_ORIGINS with your production domain
